<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transaction Type"
        android:textColor="#FF0000"
        android:id="@+id/tv_tra_type"/>
    <TextView
        android:layout_toRightOf="@+id/tv_tra_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reciept"
        android:id="@+id/tv_tra"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/tv_tra_type" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:id="@+id/tv_date_display"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/tv_date"
        android:layout_toStartOf="@+id/tv_date" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="this is date"
        android:id="@+id/tv_date"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:id="@+id/tv_description"
        android:layout_above="@+id/tv_description_holder"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="description Goes here"
        android:id="@+id/tv_description_holder"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/tv_date"
        android:layout_alignEnd="@+id/tv_date"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>